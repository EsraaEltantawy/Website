@model IEnumerable<Pro1.Models.Team>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Team-->
<section class="page-section bg-light" id="team">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Our Amazing Team</h2>
            <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
        </div>
        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-lg-4">
                    <div class="team-member">
                        <img class="mx-auto rounded-circle" src="~/Image/@item.tm_img" alt="" />
                        <h4>@item.tm_Name</h4>
                        <p class="text-muted">@item.tm_job</p>
                        

                        <a class="btn btn-dark btn-social mx-2" href="@item.tm_Tw"><i class="fab fa-twitter"></i></a><a class="btn btn-dark btn-social mx-2" href="@item.tm_Fc"><i class="fab fa-facebook-f"></i></a><a class="btn btn-dark btn-social mx-2" href="@item.tm_Ln"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>

            }



            <div class="row">
                <div class="col-lg-8 mx-auto text-center"><p class="large text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aut eaque, laboriosam veritatis, quos non quis ad perspiciatis, totam corporis ea, alias ut unde.</p></div>
            </div>
        </div>
        </div>
</section>
