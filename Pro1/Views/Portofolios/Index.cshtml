@model IEnumerable<Pro1.Models.Portofolio>

<section class="page-section bg-light" id="portfolio">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Portfolio</h2>
            <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-sm-6 mb-4">
                    <div class="portfolio-item">
                        <a class="portfolio-link" >
                            <div class="portfolio-hover">
                                <div class="portfolio-hover-content"></div>
                            </div>
                            <img class="img-fluid" src="~/Image/@item.Prt_img" alt="" style=" width:300px; height:300px;" />
                        </a>
                        <div class="portfolio-caption">
                            <div class="portfolio-caption-heading">@item.Prt_Name</div>
                            <div class="portfolio-caption-subheading text-muted">@item.Prt_Categry</div>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</section>