@model IEnumerable<Pro1.Models.Team>

@{
    ViewBag.Title = "AdminIndex";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2 class="text-center alert alert-success ">Teams</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-outline-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tm_img)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tm_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tm_job)
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        <img src="~/Image/@item.tm_img" alt="Alternate Text" style="width:100px; height:100px;border:1px solid white ; " class="img img-thumbnail" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.tm_Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.tm_job)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.tm_Id }, new { @class = "btn btn-primary" }) 
        @Html.ActionLink("Details", "Details", new { id = item.tm_Id }, new { @class = "btn btn-success" }) 
        @Html.ActionLink("Delete", "Delete", new { id = item.tm_Id }, new { @class = "btn btn-danger" })
    </td>
</tr>
}

</table>
